#include <RBELib/RBELib.h>

static const int prescale = PRESCALE1024

void initTimer(unsigned char timer, int mode, unsigned int comp){
	cli(); // disable interrupts until setup is finished
	switch(timer){
	case 0:
		// Set timer mode
		TCCR0A = mode << COM0A0 | mode << WGM00;
		TCCR0B = prescale << CS00;

		break;
	case 1:
		w
	}
	sei();
}

void setCompValue(unsigned char timer, unsigned short comp){
	switch(timer){
	case 0:
		OCR0A = comp;
		break;
	case 1:
		OCR1A = comp;
		TIMSK1 = 0b00000010;
		break;
	case 2:
		OCR1B = comp;
		TIMSK2 = 0b00000020;
		break;
	}
}

